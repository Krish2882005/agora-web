<header id="site-header" class="absolute top-0 left-0 right-0 z-50 p-4 sm:p-6">
    <div class="container mx-auto flex justify-between items-center">
        
        <a href="/" class="flex items-center gap-3">
            <img src="/favicon.svg" alt="Agora logo" class="h-10 w-10" />
            <span class="text-2xl sm:text-3xl font-semibold font-serif text-text-color">Agora</span>
        </a>

        
        <nav class="hidden md:flex items-center">
            <a href="https://discord.com/oauth2/authorize?client_id=1398980964901978123&permissions=395137346624&integration_type=0&scope=bot" target="_blank" rel="noopener noreferrer" class="btn-secondary">
                Add to Discord
            </a>
        </nav>

        
        <div class="md:hidden">
            <button id="menu-toggle" aria-label="Open menu" class="p-2 text-primary-color">
                <i data-feather="menu" class="h-7 w-7"></i>
            </button>
        </div>
    </div>
</header>


<div id="mobile-menu" class="fixed top-0 right-0 h-full w-full max-w-xs bg-bg-color shadow-2xl z-50 transform translate-x-full transition-transform duration-300 ease-in-out md:hidden">
    <div class="flex justify-end p-5">
        <button id="menu-close" aria-label="Close menu" class="p-2 text-primary-color">
            <i data-feather="x" class="h-7 w-7"></i>
        </button>
    </div>
    <nav class="flex flex-col items-center justify-center h-full -mt-16">
        <a href="https://discord.com/oauth2/authorize?client_id=1398980964901978123&permissions=395137346624&integration_type=0&scope=bot" target="_blank" rel="noopener noreferrer" class="btn-primary text-lg px-10 py-4">
            Add to Discord
        </a>
    </nav>
</div>

<script>
    
    const menuToggle = document.getElementById('menu-toggle');
    const menuClose = document.getElementById('menu-close');
    const mobileMenu = document.getElementById('mobile-menu');

    function openMenu() {
        mobileMenu?.classList.remove('translate-x-full');
    }

    function closeMenu() {
        mobileMenu?.classList.add('translate-x-full');
    }

    menuToggle?.addEventListener('click', openMenu);
    menuClose?.addEventListener('click', closeMenu);

    
    document.addEventListener('click', (event) => {
        if (!mobileMenu?.contains(event.target) && !menuToggle?.contains(event.target)) {
            closeMenu();
        }
    });

    
</script>
